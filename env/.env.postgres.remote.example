## Example remote n8n (Postgres) env
# Copy this file to .env.postgres.remote and fill in real values.

# Local n8n container connecting to a remote Postgres
# Core
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_HOST=localhost
N8N_EDITOR_BASE_URL=http://localhost:5678
WEBHOOK_URL=http://localhost:5678
GENERIC_TIMEZONE=UTC
# Keep this stable across environments
N8N_ENCRYPTION_KEY=replace-with-strong-random-key

# Remote Postgres (e.g. GCP VM)
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=changeme
DB_POSTGRESDB_HOST=your-remote-postgres-host

# Postgres container env (not used in remote mode, but kept for parity)
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=changeme

# n8n DB type
DB_TYPE=postgresdb

# Runners (enable external task runners)
N8N_RUNNERS_ENABLED=true
N8N_RUNNERS_MODE=external
N8N_RUNNERS_BROKER_LISTEN_ADDRESS=0.0.0.0
N8N_RUNNERS_BROKER_PORT=5679
# Shared token between n8n and runners (change this)
N8N_RUNNERS_AUTH_TOKEN=replace-with-runner-token
# Runner sidecar connects to broker on n8n service
N8N_RUNNERS_TASK_BROKER_URI=http://n8n:5679
# Optional: limit concurrency per runner
N8N_RUNNERS_MAX_CONCURRENCY=2

# Values used by the `psql-remote` Make target
DB_POSTGRESDB_HOST=your-remote-postgres-host
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_DATABASE=n8n
